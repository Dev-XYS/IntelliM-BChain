/* pages/profile/children/allergic.wxss */
.header-region {
  background-color: #F0EFF5;
  box-sizing: border-box;
  width: 100%;
  padding: 50rpx;
  color: var(--theme-color);
  display: flex;
  flex-direction: row;
}

.title {
  text-align: center;
  color: var(--theme-color);
  font-size: large;
  font-weight: bold;
  margin-bottom: 20rpx;

}

.weui-text-area {
  display: block;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  -moz-box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 8px;
  -webkit-box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 8px;
  resize: none;
  background: transparent;
  width: 690rpx;
  height: 600rpx;
  color: inherit;
  font-size: 1em;
  line-height: 100%;
  margin: 20rpx;
  padding: 10rpx;
}

.weui-textarea-counter {
  margin: 20rpx;
}

.title-img {
  width: 28px;
  height: 28px;
}

.title-area {
  font-size: large;
  font-weight: bold;
  margin-left: 20rpx;
}

.image-selector {
  box-sizing: border-box;
  position: relative;
  height: 500rpx;
  white-space: nowrap;
}

.scroll-item {
  display: inline-block;
  box-sizing: border-box;
  height: 100%;
  border: solid transparent 30rpx;
}

.image {
  box-sizing: border-box;
  height: 100%;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.2);
}

.button-insert {
  display: inline-block;
  position: absolute;
  top: calc(250rpx - 25px);
  width: 50px;
  height: 50px;
  padding-left: 20rpx;
  padding-right: 50rpx;
}

.button-insert::after {
  border: none;
}

.more-margin-bottom {
  margin-bottom: 75rpx;
}