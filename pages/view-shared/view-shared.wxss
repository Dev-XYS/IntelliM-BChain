/* pages/view-shared/view-shared.wxss */

/* From index.wxss */

.records {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.records .item {
  align-items: center;
  padding: 25rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.records .item:last-child {
  border-bottom: 0;
}

.records .item .hospital {
  width: 100%;
  font-size: 45rpx;
  color: #444;
}

.records .item .brief {
  padding-right: 40rpx;
  font-size: 30rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.records .item .detail {
  width: 100%;
  font-size: 30rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
