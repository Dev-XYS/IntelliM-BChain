page {
  background-color: white;
}

.root-container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  margin: 0;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.error-message {
  text-align: center;
  color: #e0e0e0;
}

.record-list-component {
  height: 100%;
}

/* tabs style */

.tabs {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-grow: 0;
  flex-shrink: 0;
}
 
.tab-sel {
  color: #24272c;
  font-size: small;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.tab-sel .tab-line {
  background: #fff;
  height: 6rpx;
  width: 100%;
  position: relative;
  margin-top: 10rpx;
}
 
.tab-sel-selected{
  color: var(--theme-color);
  font-size: small;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-sel-selected .tab-line {
  background: var(--theme-color);
  height: 6rpx;
  width: 100%;
  position: relative;
  margin-top: 10rpx;
}
 
.swiper {
  flex-grow: 1;
  flex-shrink: 1;
  overflow: scroll;
  margin: 0;
}

.swiper-item {
  height: 100%;
  width: 100%;
}

.record-clusters {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
}

.cluster {
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.4);
  margin: 10px;
  border-radius: 5px;
  padding: 10px
}

.first-date {
  font-size: small;
}

.last-date {
  font-size: small;
}

.brief {
  color: #555;
  font-size: small;
}
