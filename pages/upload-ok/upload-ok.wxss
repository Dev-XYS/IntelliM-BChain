/* pages/upload-ok/upload-ok.wxss */

.container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.image {
  width: 80px;
  height: 80px;
  margin: auto;
  margin-top: 30px;
}

.title {
  font-size: large;
  font-weight: bold;
  text-align: center;
  margin: 10px;
}

.detail {
  font-size: small;
  text-align: center;
  margin: 5px;
}

.id {
  font-family: Consolas, monospace;
  font-size: small;
  flex-grow: 1;
  flex-shrink: 1;
  text-align: center;
}

.footer {
  margin-bottom: 10px;
}

.button {
  margin: auto;
}

.copyright {
  margin: 10px;
  margin-top: 30px;
  text-align: center;
  font-size: small;
  color: #888;
}
