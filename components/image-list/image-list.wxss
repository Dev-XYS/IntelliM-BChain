/* components/image-list/image-list.wxss */

.image-selector {
  box-sizing: border-box;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  white-space: nowrap;
}

.scroll-item {
  display: inline-block;
  box-sizing: border-box;
  height: 100%;
  border: solid transparent 15px;
}

.image {
  box-sizing: border-box;
  height: 100%;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.2);
}

.info-sid {
  height: 15px;
  color: darkblue;
  font-size: small;
  font-family: Consolas, monospace;
  text-align: center;
  margin-bottom: 15px;
}

.button-insert {
  display: inline-block;
  position: absolute;
  top: calc(50% - 25px);
  width: 50px;
  height: 50px;
  padding-left: 20rpx;
  padding-right: 50rpx;
}

.button-insert::after {
  border: none;
}
